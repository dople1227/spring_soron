<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.soron.sample.mapper.SampleMapper">

    <!-- Result Map 정의 -->
    <resultMap id="sampleResultMap" type="com.soron.sample.model.Sample">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 공통 컬럼 정의 -->
    <sql id="sampleColumns">
        id, title, content, status, created_at, updated_at
    </sql>

    <!-- 검색 조건 정의 -->
    <sql id="searchCondition">
        <where>
            <if test="title != null and title != ''">
                AND title LIKE CONCAT('%', #{title}, '%')
            </if>
            <if test="content != null and content != ''">
                AND content LIKE CONCAT('%', #{content}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <!-- 기본적으로 삭제된 데이터는 제외 -->
            AND status != 'DELETED'
        </where>
    </sql>

    <!-- 샘플 목록 조회 (페이징, 검색) -->
    <select id="selectSampleList" parameterType="com.soron.sample.dto.SampleSearchDto" 
            resultMap="sampleResultMap">
        SELECT 
            <include refid="sampleColumns"/>
        FROM sample
        <include refid="searchCondition"/>
        ORDER BY 
        <choose>
            <when test="sortBy == 'title'">title</when>
            <when test="sortBy == 'status'">status</when>
            <when test="sortBy == 'updatedAt'">updated_at</when>
            <otherwise>created_at</otherwise>
        </choose>
        <choose>
            <when test="sortDir == 'ASC'">ASC</when>
            <otherwise>DESC</otherwise>
        </choose>
        LIMIT #{size} OFFSET #{offset}
    </select>

    <!-- 샘플 총 개수 조회 (검색 조건 포함) -->
    <select id="selectSampleCount" parameterType="com.soron.sample.dto.SampleSearchDto" 
            resultType="long">
        SELECT COUNT(*)
        FROM sample
        <include refid="searchCondition"/>
    </select>

    <!-- 샘플 단건 조회 -->
    <select id="selectSampleById" parameterType="long" resultMap="sampleResultMap">
        SELECT 
            <include refid="sampleColumns"/>
        FROM sample
        WHERE id = #{id}
        AND status != 'DELETED'
    </select>

    <!-- 샘플 생성 -->
    <insert id="insertSample" parameterType="com.soron.sample.model.Sample" 
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sample (
            title, 
            content, 
            status, 
            created_at, 
            updated_at
        ) VALUES (
            #{title}, 
            #{content}, 
            COALESCE(#{status}, 'ACTIVE'), 
            NOW(), 
            NOW()
        )
    </insert>

    <!-- 샘플 수정 -->
    <update id="updateSample" parameterType="com.soron.sample.model.Sample">
        UPDATE sample
        SET 
            title = #{title},
            content = #{content},
            status = #{status},
            updated_at = NOW()
        WHERE id = #{id}
        AND status != 'DELETED'
    </update>

    <!-- 샘플 삭제 (물리적 삭제) -->
    <delete id="deleteSample" parameterType="long">
        DELETE FROM sample
        WHERE id = #{id}
    </delete>

    <!-- 샘플 소프트 삭제 (상태를 DELETED로 변경) -->
    <update id="softDeleteSample" parameterType="long">
        UPDATE sample
        SET 
            status = 'DELETED',
            updated_at = NOW()
        WHERE id = #{id}
        AND status != 'DELETED'
    </update>

    <!-- 제목으로 샘플 존재 여부 확인 -->
    <select id="existsByTitle" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM sample
        WHERE title = #{title}
        AND status != 'DELETED'
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

</mapper>